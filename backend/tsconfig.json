  "compilerOptions": {
    "target": "es2016", // or es5?
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
